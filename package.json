{
  "name": "@king-3/eslint-config",
  "version": "3.0.1-beta.2",
  "packageManager": "pnpm@10.20.0",
  "description": "ESLint config for @king-3",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/coderking3/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/coderking3/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coderking3/eslint-config.git"
  },
  "author": "king3 <w2196592083@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "build": "pnpm build:typegen && tsx scripts/build.ts",
    "build:inspector": "pnpm build && npx @eslint/config-inspector build",
    "build:typegen": "tsx scripts/typegen.ts",
    "format": "prettier . --write",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "release": "bumpp",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "@eslint-react/eslint-plugin": "^2.0.1",
    "@next/eslint-plugin-next": ">=15.0.0",
    "@unocss/eslint-plugin": ">=0.50.0",
    "eslint": "^9.10.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.19"
  },
  "peerDependenciesMeta": {
    "@eslint-react/eslint-plugin": {
      "optional": true
    },
    "@next/eslint-plugin-next": {
      "optional": true
    },
    "@unocss/eslint-plugin": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    },
    "eslint-plugin-react-refresh": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/install-pkg": "catalog:prod",
    "@clack/prompts": "catalog:prod",
    "@eslint-community/eslint-plugin-eslint-comments": "catalog:plugins",
    "@eslint/js": "catalog:prod",
    "@eslint/markdown": "catalog:prod",
    "@typescript-eslint/eslint-plugin": "catalog:plugins",
    "@typescript-eslint/parser": "catalog:parsers",
    "eslint-config-flat-gitignore": "catalog:prod",
    "eslint-config-prettier": "catalog:prod",
    "eslint-flat-config-utils": "catalog:prod",
    "eslint-plugin-antfu": "catalog:plugins",
    "eslint-plugin-command": "catalog:plugins",
    "eslint-plugin-import-lite": "catalog:plugins",
    "eslint-plugin-jsdoc": "catalog:plugins",
    "eslint-plugin-jsonc": "catalog:plugins",
    "eslint-plugin-n": "catalog:plugins",
    "eslint-plugin-perfectionist": "catalog:plugins",
    "eslint-plugin-pnpm": "catalog:plugins",
    "eslint-plugin-prettier": "catalog:plugins",
    "eslint-plugin-regexp": "catalog:plugins",
    "eslint-plugin-unicorn": "catalog:plugins",
    "eslint-plugin-unused-imports": "catalog:plugins",
    "eslint-plugin-vue": "catalog:plugins",
    "eslint-plugin-yml": "catalog:plugins",
    "globals": "catalog:prod",
    "jsonc-eslint-parser": "catalog:parsers",
    "local-pkg": "catalog:prod",
    "prettier": "catalog:prod",
    "vue-eslint-parser": "catalog:parsers",
    "yaml-eslint-parser": "catalog:parsers"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "catalog:peer",
    "@eslint/config-inspector": "catalog:dev",
    "@king-3/prettier-config": "catalog:dev",
    "@next/eslint-plugin-next": "catalog:peer",
    "@types/node": "catalog:dev",
    "@unocss/eslint-plugin": "catalog:peer",
    "ansis": "catalog:dev",
    "bumpp": "catalog:dev",
    "eslint": "catalog:peer",
    "eslint-plugin-react-hooks": "catalog:peer",
    "eslint-plugin-react-refresh": "catalog:peer",
    "eslint-typegen": "catalog:dev",
    "jiti": "catalog:dev",
    "lint-staged": "catalog:dev",
    "simple-git-hooks": "catalog:dev",
    "tsdown": "catalog:dev",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev"
  },
  "resolutions": {
    "eslint": "catalog:peer"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
      "pnpm format",
      "pnpm lint:fix"
    ]
  }
}
